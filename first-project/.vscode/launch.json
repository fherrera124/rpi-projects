{
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
      "miDebuggerServerAddress": "192.168.100.20:1234", // https://github.com/microsoft/vscode/issues/95371
      "args": [],
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "targetArchitecture": "arm",
      "MIMode": "gdb",
      "stopAtEntry": true,
      "windows": {
        "miDebuggerPath": "${workspaceFolder}/../toolchain/bin/arm-linux-gnueabihf-gdb.exe",
        "deploySteps": [
          {// en caso de que haya quedado una instancia espurea
            "type": "shell",
            "label": "kill gdbserver",
            "command": "ssh pi@192.168.100.20 \"pkill gdbserver\""
          },
          {
            // ya que "CMake: build & debug" corre en background, debemos esperar que cree el ejecutable
            "type": "shell",
            "label": "Wait for Build File",
            "command": "${workspaceFolder}\\wait_for_build.bat ${workspaceFolder}\\build\\${fileBasenameNoExtension}"
          }
        ]
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: build & debug"
    }
  ]
}
